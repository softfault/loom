{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Loom",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#class-def"
        },
        {
            "include": "#function-def"
        },
        {
            "include": "#imports"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#types"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#function-calls"
        },
        {
            "include": "#member-access"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#variables"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.loom",
                    "match": "//.*$"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.loom",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.loom",
                    "match": "\\\\."
                }
            ]
        },
        "numbers": {
            "name": "constant.numeric.loom",
            "match": "\\b\\d+(\\.\\d+)?\\b"
        },
        "imports": {
            "name": "meta.import.loom",
            "match": "\\b(use)\\s+([a-zA-Z_][a-zA-Z0-9_\\.]*)(\\s+(as)\\s+([a-zA-Z_][a-zA-Z0-9_]*))?",
            "captures": {
                "1": {
                    "name": "keyword.control.import.loom"
                },
                "2": {
                    "name": "entity.name.namespace.loom"
                },
                "3": {
                    "name": "keyword.control.import.loom"
                },
                "4": {
                    "name": "entity.name.namespace.loom"
                }
            }
        },
        "class-def": {
            "name": "meta.class.loom",
            "comment": "匹配 class Name<T> : Parent",
            "match": "\\b(class)\\s+([a-zA-Z_][a-zA-Z0-9_]*)(\\s*<.*?>)?(\\s*(:)\\s*([a-zA-Z_][a-zA-Z0-9_\\.]*))?",
            "captures": {
                "1": {
                    "name": "storage.type.class.loom"
                },
                "2": {
                    "name": "entity.name.type.class.loom"
                },
                "3": {
                    "name": "entity.name.type.generic.loom"
                },
                "5": {
                    "name": "keyword.operator.inheritance.loom"
                },
                "6": {
                    "name": "entity.other.inherited-class.loom"
                }
            }
        },
        "function-def": {
            "name": "meta.function.loom",
            "comment": "匹配 fn name(args) Type",
            "match": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
            "captures": {
                "1": {
                    "name": "storage.type.function.loom"
                },
                "2": {
                    "name": "entity.name.function.loom"
                }
            }
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.loom",
                    "match": "\\b(if|else|while|for|in|return|break|continue|and|or|not)\\b"
                },
                {
                    "name": "constant.language.loom",
                    "match": "\\b(true|false|nil)\\b"
                },
                {
                    "name": "variable.language.loom",
                    "match": "\\b(self)\\b"
                },
                {
                    "name": "keyword.other.loom",
                    "match": "\\b(as)\\b"
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "storage.type.primitive.loom",
                    "match": "\\b(int|float|bool|str|char|void|any)\\b"
                },
                {
                    "name": "entity.name.type.loom",
                    "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
                }
            ]
        },
        "function-calls": {
            "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
            "captures": {
                "1": {
                    "name": "entity.name.function.call.loom"
                }
            }
        },
        "member-access": {
            "match": "(\\.)\\s*([a-zA-Z_][a-zA-Z0-9_]*)",
            "captures": {
                "1": {
                    "name": "punctuation.accessor.loom"
                },
                "2": {
                    "name": "variable.other.property.loom"
                }
            }
        },
        "operators": {
            "name": "keyword.operator.loom",
            "match": "(=>|\\.\\.|\\+|-|\\*|/|%|=|==|!=|<|>|<=|>=|:|!|\\+=|-=|\\*=|/=|%=)"
        },
        "variables": {
            "name": "variable.other.loom",
            "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
    },
    "scopeName": "source.loom"
}